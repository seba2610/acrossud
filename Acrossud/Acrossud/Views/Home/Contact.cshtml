            </div>
            <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
                <div id="social-network-wrapper">
                    <div class="col-lg-12">
                        <a class="link-address" href="https://www.facebook.com/brianoalicia">
                            <img width="40" height="40" src="@Url.Content("~/images/facebook_icon.png")" />
                            <span>/brianoalicia</span>
                        </a>
                    </div>
                    <div class="col-lg-12">
                        <div class="link-address">
                            <img width="40" height="40" src="@Url.Content("~/images/whatsapp_icon.png")" />
                            <span>098 732 756</span>
                        </div>
                    </div>
                    <div class="col-lg-12">
                        <a class="link-address" href="mailto:abriano@acrossud.com">
                            <img width="40" height="30" src="@Url.Content("~/images/email_icon.png")" />
                            <span>abriano@acrossud.com</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>