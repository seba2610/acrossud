<div class="main-title-wrapper">
    <h2 id="contacto" class="main-title">Contacto</h2>
</div>

<div class="row-fill">
    <div class="col-lg-8 col-lg-offset-2">
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
                <form id="contact-me-form" action="http://formspree.io/abriano@acrossud.com.uy" method="POST">
                    <h4 id="name-label">Nombre</h4>
                    <input id="name-input" type="text" name="_name_reply">
                    <h4 id="email-label">E-mail</h4>
                    <input id="email-input" type="email" name="_reply_to">
                    <h4 id="msg-label">Mensaje</h4>
                    <textarea id="msg-textarea" name="_body"></textarea>
                    <input type="hidden" name="_next" value="http://www.m6.com.uy?success-msg=true#contact-me">
