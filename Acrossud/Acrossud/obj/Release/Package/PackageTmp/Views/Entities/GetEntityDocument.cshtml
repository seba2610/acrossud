
<div class="row">
    <div class="col-md-10 col-lg-8 col-md-offset-1 col-lg-offset-2">
        <h2>@ViewBag.EntityName</h2>
        <h3>Imágenes</h3>
        <div class="row">
            @using (Html.BeginForm("AddEntityDocument", "Entities", FormMethod.Post, new { @id = "maindropzone", @class = "form-horizontal dropzone js-allow-double-submission", role = "form", enctype = "multipart/form-data" }))
            {
                @Html.Hidden("entity_id", (int)ViewBag.EntityId)
                <div class="dz-message" data-dz-message><span>Arrastre las imágenes aquí o haga click.</span></div>
            }

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10 text-right">
                    <input type="submit" class="btn btn-success" value="Finalizar" onclick="window.location='@Url.Action("Index","Entities")';return false;" />
                </div>
            </div>
        </div>
    </div>
</div>